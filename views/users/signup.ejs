<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title></title>
    <!-- BOOTSTRAP CDN -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">

    <!-- PROJECT CSS    -->
    <link rel="stylesheet" href="/css/style.css">

    <!-- JQUERY CDN -->
    <script src="https://code.jquery.com/jquery-3.1.1.min.js" integrity="sha256-hVVnYaiADRTO2PzUGmuLJr8BLUSjGIZsDYGmIJLv2b8=" crossorigin="anonymous"></script>

    <!-- PROJECT JS -->
    <script type="text/javascript" src="/js/app.js"></script>
  </head>
  <body>

    <div class="container">
        <form class="form-horizontal" role="form" action="/users" method="POST">
            <h2>SIGN UP!</h2>
            <div class="form-group">
                <label for="firstName" class="col-sm-3 control-label">Username</label>
                <div class="col-sm-9">
                    <input type="text" name="name" placeholder="Username" class="form-control" autofocus>
                </div>
            </div>
            <div class="form-group">
                <label for="password" class="col-sm-3 control-label">Password</label>
                <div class="col-sm-9">
                    <input type="password" name="password" placeholder="Password" class="form-control">
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-9 col-sm-offset-3">
                    <button type="submit" class="btn btn-primary btn-block">Do It</button>
                </div>
            </div>
            <% if (userTaken) { %>
              <div class="col-sm-9 col-sm-offset-5">Username already taken! Try again</div>
            <% } %>
        </form> <!-- /form -->
    </div> <!-- ./container -->


    <div class="container">
        <form class="form-horizontal" role="form" action="/users/login" method="POST">
            <h2>LOG IN . . . </h2>
            <div class="form-group">
                <label for="firstName" class="col-sm-3 control-label">Username</label>
                <div class="col-sm-9">
                    <input type="text" name="name" placeholder="Username" class="form-control" autofocus>
                </div>
            </div>
            <div class="form-group">
                <label for="password" class="col-sm-3 control-label">Password</label>
                <div class="col-sm-9">
                    <input type="password" name="password" placeholder="Password" class="form-control">
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-9 col-sm-offset-3">
                    <button type="submit" class="btn btn-primary btn-block">Log It</button>
                </div>
            </div>
        </form> <!-- /form -->
        <% if (wrongPass) { %>
          <div class="col-sm-9 col-sm-offset-6">Wrong password</div>
        <% } %>
        <% if (wrongUser) { %>
          <div class="col-sm-9 col-sm-offset-5">Username <%= wrongUser %> does not exist!</div>
        <% } %>
    </div> <!-- ./container -->

  </body>
</html>
